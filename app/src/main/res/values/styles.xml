<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_translucent</item> 
        <item name="android:colorControlHighlight" tools:targetApi="21">@color/primary_translucent</item> 
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>-->

        <item name="android:windowContentOverlay">@null</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="linkBuilderStyle">@style/LinkBuilder</item>


        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:windowContentTransitions" tools:targetApi="21">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:elevation" tools:targetApi="21">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="LinkBuilder">
        <item name="defaultLinkColor">#222222</item>
    </style>
</resources>
